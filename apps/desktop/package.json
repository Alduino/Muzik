{
    "name": "@muzik/app-desktop",
    "version": "1.0.0",
    "description": "The desktop app for Muzik",
    "license": "MIT",
    "main": "build/main/index.js",
    "bin": {
        "muzik": "bin/muzik.sh"
    },
    "build": {
        "appId": "dev.alduino.muzik",
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "package.json"
        ]
    },
    "scripts": {
        "build:bundle": "rollup -c",
        "build": "NODE_ENV=production npm_execpath=pnpm run-s clean:build copy:preload build:bundle",
        "clean:build": "rm -rf ./build/*",
        "clean:dist": "rm -rf ./dist/*",
        "copy:preload": "mkdir -p ./build/main && cp ./src/main/preload.js ./build/main/preload.js",
        "dev:main": "rollup --watch -c main.build.js --no-watch.clearScreen",
        "dev:renderer:bundle": "nollup -c renderer.build.js --port 3000 --hot",
        "dev:renderer:server": "http-server ./build/renderer -p 3000 -s",
        "dev:renderer": "pnpm run dev:renderer:bundle",
        "dev:bundle": "run-p dev:main dev:renderer -l",
        "dev:wait": "wait-on ./build/main/index.js && wait-on http://localhost:3000",
        "dev:electron": "electron . --disable-http-cache --inspect",
        "dev:wait-electron": "run-s dev:wait dev:electron -l",
        "dev:run": "npm_execpath=pnpm run-p dev:bundle dev:wait-electron",
        "dev": "NODE_ENV=development pnpm clean:build && pnpm copy:preload && pnpm dev:run",
        "dist": "pnpm build && pnpm clean:dist && electron-builder"
    },
    "dependencies": {
        "@chakra-ui/icons": "^1.0.8",
        "@chakra-ui/react": "^1.4.2",
        "@emotion/react": "^11",
        "@emotion/styled": "^11",
        "@muzik/database": "workspace:^1.0.0",
        "@muzik/logger": "workspace:^1.0.0",
        "@nodegui/nodegui": "^0.30.2",
        "@nodegui/react-nodegui": "^0.11.0",
        "@reduxjs/toolkit": "^1.5.1",
        "electron-is-dev": "^2.0.0",
        "framer-motion": "^4",
        "i18next": "^20.1.0",
        "i18next-browser-languagedetector": "^6.1.0",
        "node-abort-controller": "^1.2.0",
        "react": "^17.0.2",
        "react-async-hook": "^3.6.2",
        "react-dom": "^17.0.2",
        "react-i18next": "^11.8.12",
        "react-redux": "^7.2.3",
        "react-spinners": "^0.10.6",
        "redux": "^4.0.5",
        "regenerator-runtime": "^0.13.7",
        "roarr": "^4.2.5",
        "tslib": "^2.1.0"
    },
    "devDependencies": {
        "@muzik/rollup-plugin-disallow-module": "workspace:^1.0.0",
        "@nodegui/packer": "^1.4.1",
        "@roarr/cli": "^3.2.3",
        "@rollup/plugin-commonjs": "^18.0.0",
        "@rollup/plugin-html": "^0.2.3",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@rollup/plugin-replace": "^2.4.2",
        "@rollup/plugin-wasm": "^5.1.2",
        "@types/node": "^14.14.37",
        "@types/react": "^16.14.0",
        "@types/react-dom": "^17.0.3",
        "@types/webpack-env": "^1.16.0",
        "concurrently": "^5.2.0",
        "electron": "^12.0.2",
        "electron-builder": "^22.10.5",
        "http-server": "^0.12.3",
        "nollup": "^0.16.1",
        "npm-run-all": "^4.1.5",
        "rollup": "^2.44.0",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-polyfill-node": "^0.6.2",
        "rollup-plugin-progress": "^1.1.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-visualizer": "^5.3.0",
        "typescript": "^4.2.3",
        "wait-on": "^5.3.0"
    }
}
