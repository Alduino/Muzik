{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/command-line.schema.json",

  "commands": [
    {
      "commandKind": "global",
      "name": "run-prettier",
      "summary": "Runs Prettier across the whole project",
      "shellCommand": "prettier . --write",
      "autoinstallerName": "prettier"
    },
    {
      "commandKind": "global",
      "name": "run-prettier:quick",
      "summary": "Runs Prettier on changed files",
      "shellCommand": "pretty-quick --staged",
      "autoinstallerName": "prettier"
    },
    {
      "commandKind": "bulk",
      "name": "build:watch",
      "summary": "Builds projects when files change",
      "enableParallelism": true
    },
    {
      "commandKind": "bulk",
      "name": "start",
      "summary": "Runs each project",
      "enableParallelism": true
    },
    {
      "commandKind": "bulk",
      "name": "start:debug",
      "summary": "Runs each project in debug mode",
      "enableParallelism": true
    }
  ],
  "parameters": []
}
