{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2015",
        "lib": ["es2020"],
        "sourceMap": true,
        "jsx": "react",
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true
    },
    "exclude": ["node_modules"]
}
