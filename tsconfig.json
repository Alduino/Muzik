{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2015",
        "lib": ["es5", "es6", "es7", "es2017", "es2018", "es2019", "es2020"],
        "sourceMap": true,
        "jsx": "react",
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"]
}
